<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/categorys.css">
    <title>Document</title>
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <h1 class="text-center mt-4">Groceries Category</h1>
    <div class="container">
        <div class="card-container">
            <% items.forEach(item => { %>
            <form action="/users/<%= user %>/cart" method="post">
                <div class="card">
                    <p class="card-title"><img src="/Images/<%= item.img %>" alt=""></p>
                    <p class="card-text">Price: $<%= item.price %></p>
                    <input type="number" name="qty" id="qty" min="1" value="1">
                    <input type="text" name="name" id="name" hidden value="<%= item.name %>">
                    <input type="text" name="price" id="price" hidden value="<%= item.price %>">
                    <input type="text" name="img" id="img" hidden value="<%= item.img %>">
                    <input type="text"  name="type" hidden  value="<%= item.categorys%>">

                    <button id="Add" type="submit">Add to cart</button>
                </div>
            </form>
            <% }) %>
        </div>
    </div>
    <script>
        for (let index = 0; index < 8; index++) {
          document.querySelectorAll('#Add')[index].addEventListener("click",()=>{alert(`Item has been added!`)})
        }
  
          
      </script>
</body>
</html>
