<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>
<div class="container">
   <a href="/store/edit">Edit</a>
    <form id="deleteForm" action="/users/<%= user._id %>?_method=DELETE" method="post">
      <label for="email">Email</label>
      <input type="email" name="email" id="email" value="<%= user.email %>" disabled>
      <label for="adress">Address</label>
      <input type="text" name="adress" id="adress" value="<%= user.address %>" disabled>
      <label for="zip">ZIP</label>
      <input type="number" name="zip" id="zip" value="<%= user.zip %>" disabled>
      <input hidden="true" type="text" name="type" id="type" value="false">
      <button type="submit" class="btn btn-primary">Delete</button>
    </form>
    <div>
      <a href="/store/home"><button class="btn btn-primary">Return to home</button></a>
    </div>
</div>
<script>
    document.querySelector('#deleteForm').addEventListener('submit', function(event) {
        const confirmDelete = window.confirm('Are you sure you want to delete?');
        if (!confirmDelete) {
            event.preventDefault();
        }
    });
</script>
</body>
</html>
